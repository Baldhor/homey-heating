{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"declaration": false,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"allowJs": true,
		"jsx": "react",
		"outDir": "tmp",
		"baseUrl": "./src",
		"plugins": [
			{
				"name": "typescript-tslint-plugin",
				"alwaysShowRuleFailuresAsWarnings": false
			}
		],
		"paths": {
			"@app/*": [
				"app/*"
			],
			"*": [
				"types/*"
			]
		},
	},
	"include": [
		"./src/types/global.d.ts",
		"./src/app/app.ts",
		"./src/api/api.ts",
		"./src/drivers/virtual-thermostat/device.ts",
		"./src/drivers/virtual-thermostat/driver.ts"
	]
}