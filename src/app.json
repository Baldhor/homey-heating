{
  "id": "app.mskg.homey-heating",
  "version": "0.0.0",
  "compatibility": ">= 2.0.0",
  "sdk": 2,
  "name": {
    "en": "Homey Heating Scheduler",
    "nl": "Homey Heating Scheduler"
  },
  "tags": {},
  "brandColor": "#2196f3",
  "description": {
    "en": "Create and manage heating schedules",
    "nl": "CreÃ«er en beheer verwarmingsschema's"
  },
  "category": [
    "tools"
  ],
  "permissions": [
    "homey:manager:api"
  ],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "flow": {
    "actions": [
      {
        "id": "apply_all",
        "title": {
          "en": "Apply all active heating plans",
          "nl": "Pas alle actieve verwarmingsplannen toe"
        }
      },
      {
        "id": "apply_plan",
        "title": {
          "en": "Apply heating plan",
          "nl": "Verwarmingsplan toepassen"
        },
        "args": [
          {
            "type": "autocomplete",
            "name": "plan",
            "placeholder": {
              "en": "Search for a plan...",
              "nl": "Zoek naar een plan ..."
            }
          }
        ]
      },
      {
        "id": "set_mode",
        "title": {
          "en": "Set heating mode",
          "nl": "Stel de verwarmingsmodus in"
        },
        "args": [
          {
            "type": "dropdown",
            "name": "state",
            "values": [
              {
                "id": "0",
                "label": {
                  "en": "Automatic",
                  "nl": "automatisch"
                }
              },
              {
                "id": "1",
                "label": {
                  "en": "1 day at home",
                  "nl": "1 dag thuis"
                }
              },
              {
                "id": "2",
                "label": {
                  "en": "1 day away from home",
                  "nl": "1 dag weg van huis"
                }
              },
              {
                "id": "3",
                "label": {
                  "en": "Sleeping",
                  "nl": "Slapen"
                }
              },
              {
                "id": "3",
                "label": {
                  "en": "Holiday",
                  "nl": "Holiday"
                }
              }
            ]
          }
        ]
      },
      {
        "id": "set_log_state",
        "title": {
          "en": "Set remote logging",
          "nl": "Stel loggen op afstand in"
        },
        "args": [
          {
            "type": "dropdown",
            "name": "state",
            "values": [
              {
                "id": "true",
                "label": {
                  "en": "to enabled",
                  "nl": "ingeschakeld"
                }
              },
              {
                "id": "false",
                "label": {
                  "en": "to disabled",
                  "nl": "voor gehandicapten"
                }
              }
            ]
          }
        ]
      },
      {
        "id": "set_plan_state",
        "title": {
          "en": "Set heating plan",
          "nl": "Verwarmingsplan instellen"
        },
        "args": [
          {
            "type": "autocomplete",
            "name": "plan",
            "placeholder": {
              "en": "Search for a plan...",
              "nl": "Zoek naar een plan ..."
            }
          },
          {
            "type": "dropdown",
            "name": "state",
            "values": [
              {
                "id": "true",
                "label": {
                  "en": "to enabled",
                  "nl": "ingeschakeld"
                }
              },
              {
                "id": "false",
                "label": {
                  "en": "to disabled",
                  "nl": "voor gehandicapten"
                }
              }
            ]
          }
        ]
      }
    ]
  },
  "author": {
    "name": "Markus Kling",
    "email": "markus.kling@gmail.com"
  },
  "bugs": {
    "url": "https://github.com/mskg/homey-heating/issues"
  },
  "contributing": {
    "donate": {
      "paypal": {
        "username": "klingmarkus"
      }
    }
  },
  "drivers": [
    {
      "id": "virtual-thermostat",
      "name": {
        "en": "Virtual Thermostat",
        "nl": "Virtuele thermostaat"
      },
      "class": "thermostat",
      "capabilities": [
        "target_temperature",
        "measure_temperature",
        "onoff"
      ],
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "images": {
        "large": "/drivers/virtual-thermostat/assets/images/large.png",
        "small": "/drivers/virtual-thermostat/assets/images/small.png"
      }
    }
  ]
}