{
    "compilerOptions": {
        "target": "es6",
        "module": "esnext",
        "moduleResolution": "node",
        "declaration": false,
        "noImplicitAny": false,
        "sourceMap": true,
        "jsx": "react",
        "noLib": false,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "paths": {
        "*": ["src/types/*"]
    },
    "include": [
        "./src/types/global.d.ts",
        "./src/settings/**/*.tsx"
    ]
}